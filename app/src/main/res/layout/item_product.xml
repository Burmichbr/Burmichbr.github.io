<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/gray"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bot" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothampro_regular"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="Транспорт" />

        <Button
            android:id="@+id/item_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/gray_regular"
            android:fontFamily="@font/gothampro_medium"
            android:text="Показать на карте"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/item_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/gray_regular"
            android:fontFamily="@font/gothampro_medium"
            android:text="Финансовая статистика"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/item_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/gray_regular"
            android:fontFamily="@font/gothampro_medium"
            android:text="Больше фото"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="8dp" />

        <Space
            android:id="@+id/item_space"
            android:layout_width="1dp"
            android:layout_height="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>